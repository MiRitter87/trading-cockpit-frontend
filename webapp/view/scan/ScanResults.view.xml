<!DOCTYPE xml>
<mvc:View
	controllerName="trading-cockpit-frontend.controller.scan.ScanResults"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">
	
	<Page title="{i18n>scanResults.header}">
		<content>
			<VBox class="sapUiSmallMarginBegin">
				<FlexBox class="sapUiSmallMarginBegin" alignItems="Center" justifyContent="Start">
					<Label text="{i18n>scanResults.templateSelection}" class="sapUiSmallMarginEnd"/>
					<ComboBox id="templateComboBox"/>
					<Button icon="sap-icon://hint" type="Transparent" tooltip="{i18n>scanResults.templateTooltip}"/>
				</FlexBox>
			
				<Button text="{i18n>button.refresh}" press=".onRefreshPressed" class="sapUiSmallMargin" />
			</VBox>			
		
			<Table id="quotationTable" items="{path: 'quotations>/quotation/', sorter: {path: 'indicator/rsPercentSum', descending: true }}" 
				mode="SingleSelectMaster">
				
				<headerToolbar>
					<OverflowToolbar>
						<Title text="{i18n>scanResults.tableHeader} ({= ${quotations>/quotation/}.length})"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://sort" tooltip="{i18n>scanResults.sort}" press=".onSortPressed"/>
					</OverflowToolbar>
				</headerToolbar>
				
				<columns>
					<Column>
						<Text text="{i18n>instrument.symbol}"/>
					</Column>
					<Column>
						<Text text="{i18n>instrument.name}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>indicator.rsNumber}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>indicator.distanceTo52WeekHigh}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>indicator.bollingerBandWidth}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>indicator.volumeDifferential10Days}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>indicator.upDownVolumeRatio}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>indicator.baseLengthWeeks}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>scanResults.chart}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{quotations>instrument/symbol}"/>
							<Text text="{quotations>instrument/name}"/>
							<Text text="{quotations>indicator/rsNumber}"/>
							<Text text="{quotations>indicator/distanceTo52WeekHigh}"/>
							<Text text="{quotations>indicator/bollingerBandWidth}"/>
							<Text text="{quotations>indicator/volumeDifferential10Days}"/>
							<Text text="{quotations>indicator/upDownVolumeRatio}"/>
							<Text text="{quotations>indicator/baseLengthWeeks}"/>
							<Button icon="sap-icon://business-objects-experience" press=".onChartPressed" tooltip="{i18n>scanResults.chart.tooltip}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>