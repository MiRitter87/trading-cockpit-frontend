<!DOCTYPE xml>
<mvc:View
	controllerName="trading-cockpit-frontend.controller.scan.ScanResults"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">
	
	<Page title="{i18n>scanResults.header}">
		<content>
			<l:VerticalLayout class="sapUiSmallMarginBegin">
				<l:HorizontalLayout class="sapUiSmallMarginBegin">
					<Label text="{i18n>scanResults.templateSelection}" class="sapUiSmallMarginTop sapUiSmallMarginEnd"/>
					<ComboBox id="templateComboBox" selectedKey="ALL" class="sapUiTinyMarginTop"/>
				</l:HorizontalLayout>
			
				<Button text="{i18n>button.refresh}" press=".onRefreshPressed" class="sapUiSmallMargin" />
			</l:VerticalLayout>			
		
			<Table id="quotationTable" items="{path: 'quotations>/quotation/', sorter: {path: 'indicator/rsPercentSum', descending: true }}" 
				mode="SingleSelectMaster">
				
				<headerToolbar>
					<OverflowToolbar>
						<Text id="tableHeaderText"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://sort" tooltip="{i18n>scanResults.sort}" press=".onSortPressed"/>
					</OverflowToolbar>
				</headerToolbar>
				
				<columns>
					<Column>
						<Text text="{i18n>instrument.symbol}"/>
					</Column>
					<Column>
						<Text text="{i18n>instrument.name}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>indicator.rsNumber}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>indicator.distanceTo52WeekHigh}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>scanResults.chart}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{quotations>instrument/symbol}"/>
							<Text text="{quotations>instrument/name}"/>
							<Text text="{quotations>indicator/rsNumber}"/>
							<Text text="{quotations>indicator/distanceTo52WeekHigh}"/>
							<Button icon="sap-icon://business-objects-experience" press=".onChartPressed"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>