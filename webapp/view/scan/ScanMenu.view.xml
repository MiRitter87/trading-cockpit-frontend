<!DOCTYPE xml>
<mvc:View
	controllerName="trading-cockpit-frontend.controller.scan.ScanMenu"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<Page title="{i18n>navigation.menu.scan.header}">
		<content>
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.scan}"
						subheader="{i18n>navigation.object.create}" press="onScanCreatePressed">
				<TileContent>
					<ImageContent src="sap-icon://add" />
				</TileContent>
			</GenericTile>
			
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.scan}"
						subheader="{i18n>navigation.object.edit}" press="onScanEditPressed">
				<TileContent>
					<ImageContent src="sap-icon://edit" />
				</TileContent>
			</GenericTile>
			
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.scan}"
						subheader="{i18n>navigation.object.display}" press="onScanDisplayPressed">
				<TileContent>
					<ImageContent src="sap-icon://display" />
				</TileContent>
			</GenericTile>
			
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.scan}"
						subheader="{i18n>navigation.object.overview}" press="onScanOverviewPressed">
				<TileContent>
					<ImageContent src="sap-icon://list" />
				</TileContent>
			</GenericTile>
			
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.scan}"
						subheader="{i18n>navigation.menu.scan.results}" press="onScanResultsPressed">
				<TileContent>
					<ImageContent src="sap-icon://target-group" />
				</TileContent>
			</GenericTile>
		</content>
	</Page>
</mvc:View>