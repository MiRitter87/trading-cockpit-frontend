<!DOCTYPE xml>
<mvc:View
	controllerName="trading-cockpit-frontend.controller.instrument.InstrumentMenu"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<Page title="{i18n>navigation.menu.instrument.header}">
		<content>
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.instrument}"
						subheader="{i18n>navigation.object.create}" press="onInstrumentCreatePressed">
				<TileContent>
					<ImageContent src="sap-icon://add" />
				</TileContent>
			</GenericTile>
			
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.instrument}"
						subheader="{i18n>navigation.object.edit}" press="onInstrumentEditPressed">
				<TileContent>
					<ImageContent src="sap-icon://edit" />
				</TileContent>
			</GenericTile>
			
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.instrument}"
						subheader="{i18n>navigation.object.display}" press="onInstrumentDisplayPressed">
				<TileContent>
					<ImageContent src="sap-icon://display" />
				</TileContent>
			</GenericTile>
			
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.instrument}"
						subheader="{i18n>navigation.object.overview}" press="onInstrumentOverviewPressed">
				<TileContent>
					<ImageContent src="sap-icon://list" />
				</TileContent>
			</GenericTile>
			
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.instrument}"
						subheader="{i18n>navigation.menu.instrument.healthCheck}" press="onInstrumentHealthCheckPressed">
				<TileContent>
					<ImageContent src="sap-icon://survey" />
				</TileContent>
			</GenericTile>
		</content>
	</Page>
</mvc:View>