<!DOCTYPE xml>
<mvc:View
	controllerName="trading-cockpit-frontend.controller.instrument.InstrumentHealthCheck"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">
	
	<Page title="{i18n>instrumentHealthCheck.header}">
		<content>
			<Label text="{i18n>instrumentHealthCheck.selectionDescription}"/>
			<ComboBox id="instrumentComboBox" items="{path: 'instruments>/instrument/'}">
				<core:Item key="{instruments>id}" text="{instruments>symbol} - {instruments>name}"/>
			</ComboBox>

			<Table id="protocolTable" items="{path: 'protocolEntries>/protocolEntry/'}" mode="SingleSelectMaster" sticky="ColumnHeaders">
				<columns>
					<Column>
						<Text text="{i18n>protocol.date}"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="{i18n>protocol.category}"/>
					</Column>
					<Column>
						<Text text="{i18n>protocol.text}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{path: 'protocolEntries>date', formatter: 'formatter.wsDateFormatter'}"/>
							<Text text="{path: 'protocolEntries>category', formatter: '.categoryTextFormatter'}"/>
							<Text text="{protocolEntries>text}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>