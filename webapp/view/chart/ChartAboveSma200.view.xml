<!DOCTYPE xml>
<mvc:View
	controllerName="trading-cockpit-frontend.controller.chart.ChartAboveSma200"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	
	<Page title="{i18n>chartAboveSma200.header}">
		<headerContent>
			<Button icon="sap-icon://hint" tooltip="{i18n>chartAboveSma200.typeTooltip}" press=".onChartInformationPressed"/>
		</headerContent>
		
		<content>
			<FlexBox alignItems="Center" justifyContent="Start">
				<Label text="{i18n>chartAboveSma200.list}" class="sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
				<ComboBox id="listComboBox" items="{path: 'lists>/list/'}" required="false">
					<core:Item key="{lists>id}" text="{lists>id} - {lists>name}"/>
				</ComboBox>
				<Button text="{i18n>button.refresh}" press=".onRefreshPressed" class="sapUiSmallMargin"/>
			</FlexBox>
							
			<ScrollContainer>
				<Image id="chartImage" error=".onChartImageError"/>
			</ScrollContainer>
		</content>
	</Page>
</mvc:View>