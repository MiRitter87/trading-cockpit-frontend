<!DOCTYPE xml>
<mvc:View
	controllerName="trading-cockpit-frontend.controller.chart.ChartMenu"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	
	<Page title="{i18n>navigation.menu.chart.header}">
		<content>
			<Panel headerText="{i18n>navigation.menu.chart.header.statistic}">
				<content>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>navigation.menu.chart.advanceDeclineNumber}" press="onAdvanceDeclineNumberPressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>navigation.menu.chart.aboveSma50}" press="onAboveSma50Pressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>navigation.menu.chart.aboveSma200}" press="onAboveSma200Pressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
					 	header="{i18n>navigation.menu.chart.rmt}" press="onRmtPressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>navigation.menu.chart.rpi}" press="onRpiPressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
				</content>
			</Panel>
			
			<Panel headerText="{i18n>navigation.menu.chart.header.priceVolume}">
				<content>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.chart.pv}"
						subheader="{i18n>navigation.menu.chart.pv.jFreeChart}" press="onPriceVolumePressed">
						<TileContent>
							<ImageContent src="sap-icon://business-objects-experience" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.chart.pv}"
						subheader="{i18n>navigation.menu.chart.pv.tradingView}" press="onPriceVolumeTVPressed">
						<TileContent>
							<ImageContent src="sap-icon://business-objects-experience" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>navigation.menu.chart.dd}" press="onDistributionDaysPressed">
						<TileContent>
							<ImageContent src="sap-icon://business-objects-experience" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>navigation.menu.chart.ftd}" press="onFollowThroughDaysPressed">
						<TileContent>
							<ImageContent src="sap-icon://business-objects-experience" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>navigation.menu.chart.pp}" press="onPocketPivotsPressed">
						<TileContent>
							<ImageContent src="sap-icon://business-objects-experience" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"	header="{i18n>navigation.menu.chart.healthCheck}" 
						subheader="{i18n>navigation.menu.chart.healthCheck.jFreeChart}" press="onHealthCheckPressed">
						<TileContent>
							<ImageContent src="sap-icon://business-objects-experience" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.chart.healthCheck}" 
						subheader="{i18n>navigation.menu.chart.healthCheck.tradingView}" press="onHealthCheckTVPressed">
						<TileContent>
							<ImageContent src="sap-icon://business-objects-experience" />
						</TileContent>
					</GenericTile>
				</content>
			</Panel>
			
			<Panel headerText="{i18n>navigation.menu.chart.header.diverse}">
				<content>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
						header="{i18n>navigation.menu.chart.aggregateIndicator}" press="onAggregateIndicatorPressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>