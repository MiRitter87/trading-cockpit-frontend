<!DOCTYPE xml>
<mvc:View
	controllerName="trading-cockpit-frontend.controller.chart.ChartMenu"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<Page title="{i18n>navigation.menu.chart.header}">
		<content>
			<Panel headerText="{i18n>navigation.menu.chart.header.statistic}">
				<content>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.chart}"
						subheader="{i18n>navigation.menu.chart.advanceDeclineNumber}" press="onAdvanceDeclineNumberPressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.chart}"
						subheader="{i18n>navigation.menu.chart.aboveSma50}" press="onAboveSma50Pressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.chart}"
						subheader="{i18n>navigation.menu.chart.aboveSma200}" press="onAboveSma200Pressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.chart}"
						subheader="{i18n>navigation.menu.chart.rmt}" press="onRmtPressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.chart}"
						subheader="{i18n>navigation.menu.chart.rpi}" press="onRpiPressed">
						<TileContent>
							<ImageContent src="sap-icon://line-charts" />
						</TileContent>
					</GenericTile>
				</content>
			</Panel>
			
			<Panel headerText="{i18n>navigation.menu.chart.header.priceVolume}">
				<content>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.chart}"
						subheader="{i18n>navigation.menu.chart.pv}" press="onPriceVolumePressed">
						<TileContent>
							<ImageContent src="sap-icon://business-objects-experience" />
						</TileContent>
					</GenericTile>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>