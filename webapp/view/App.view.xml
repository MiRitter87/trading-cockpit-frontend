<!DOCTYPE xml>
<mvc:View
	controllerName="trading-cockpit-frontend.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core">
	
	<tnt:ToolPage id="toolPage">
		<!-- Application header -->
		<tnt:header>
			<tnt:ToolHeader>
				<MenuButton text="{i18n>navigation.menu}">
					<menu>
						<Menu>
							<MenuItem text="{i18n>navigation.menu.priceAlert}" icon="sap-icon://bell" press="onPriceAlertPressed" />
						</Menu>
					</menu>
				</MenuButton>
				<ToolbarSpacer />
				<Text text="Trading Cockpit"/>
				<ToolbarSpacer />
			</tnt:ToolHeader>
		</tnt:header>
	
		<!-- Content area -->
		<tnt:mainContents>
			<App id="contentPage"/>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>