<!DOCTYPE xml>
<mvc:View
	controllerName="trading-cockpit-frontend.controller.dashboard.DashboardMenu"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<Page title="{i18n>navigation.menu.dashboard.header}">
		<content>
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.dashboard}"
						subheader="{i18n>navigation.menu.dashboard.statistic}" press="onStatisticPressed">
				<TileContent>
					<ImageContent src="sap-icon://table-view" />
				</TileContent>
			</GenericTile>
			
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.menu.dashboard}"
						subheader="{i18n>navigation.menu.dashboard.charts}" press="onChartsPressed">
				<TileContent>
					<ImageContent src="sap-icon://line-charts" />
				</TileContent>
			</GenericTile>
		</content>
	</Page>
</mvc:View>